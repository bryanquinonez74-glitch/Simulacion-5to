import tkinter as tk
from tkinter import messagebox

def calcular_chi2():
    try:
        nums = [int(x) for x in entry.get().split(",")]
        n = len(nums)
        freq = [0]*5
        for d in nums:
            idx = d // 5
            if idx>=5: idx=4
            freq[idx]+=1
        esperado = n/5
        chi2 = sum((f-esperado)**2/esperado for f in freq)
        messagebox.showinfo("Resultado", f"Chi-cuadrado = {chi2:.3f}")
    except:
        messagebox.showerror("Error","Verifica los datos")

root = tk.Tk()
root.title("Prueba de Uniformidad")

tk.Label(root,text="NÃºmeros separados por coma:").pack()
entry = tk.Entry(root, width=40)
entry.pack()
tk.Button(root,text="Calcular",command=calcular_chi2).pack(pady=5)
root.mainloop()
